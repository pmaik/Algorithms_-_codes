#include<bits/stdc++.h>
using namespace std;
#define ll long long int
#define pb push_back
#define pf push_front
#define M 1000000007
#define fastio ios_base::sync_with_stdio(false);
ll P[10000000];

ll modexpo(ll x, ll n)
{
	if(n==0)
		return 1;
	if(n%2==0)
	{
		ll y=mod(x, n/2);
		return ((y%M)*(y%M))%M;
	}
	else
	{
		return ((x%M)*(mod(x, (n-1))%M))%M;
	}
}
int main()
{
	fastio;
    
    modexpo(x, n);
	return 0;
}
